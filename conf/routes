# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Admin

GET     /admin/                     controllers.admin.HomeController.index()
GET     /admin/login                controllers.admin.HomeController.login()

# API
POST    /api/task/                  controllers.api.TaskController.create()
GET     /api/task/                  controllers.api.TaskController.view()
GET     /api/task/:id/              controllers.api.TaskController.show(id :Long)
PATCH   /api/task/:id/              controllers.api.TaskController.update(id: Long)
DELETE  /api/task/:id/              controllers.api.TaskController.delete(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
