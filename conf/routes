# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Admin

GET     /admin/                     controllers.admin.HomeController.index()
GET     /admin/login                controllers.admin.HomeController.login()
POST    /admin/login                controllers.admin.HomeController.getLogin()
GET     /admin/logout               controllers.admin.HomeController.logout()
GET     /admin/schema               controllers.admin.HomeController.viewSchema()

# API
POST    /api/task/                  controllers.api.TaskController.create()
GET     /api/task/                  controllers.api.TaskController.view()
GET     /api/task/:id/              controllers.api.TaskController.show(id :Long)
PATCH   /api/task/:id/              controllers.api.TaskController.update(id: Long)
DELETE  /api/task/:id/              controllers.api.TaskController.delete(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /admin/assets/*file         controllers.Assets.versioned(path="/public/assets", file: Asset)
GET     /*file                      controllers.Assets.versioned(path="/public/dist", file: Asset)
